# ===================================
# FRONTEND ENVIRONMENT VARIABLES
# ===================================
# Copy this file to .env.local and fill in your actual values

# ===================================
# API CONFIGURATION (Backend)
# ===================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ===================================
# DEVELOPMENT FLAGS
# ===================================
# Set to 'true' to use mock data for development (no backend required)
NEXT_PUBLIC_USE_MOCK_DATA=false

# Set to 'true' to allow live API calls to exchanges (requires credentials)
NEXT_PUBLIC_ALLOW_LIVE_APIS=false

# ===================================
# EXCHANGE API KEYS (OPTIONAL)
# ===================================
# Only needed if NEXT_PUBLIC_ALLOW_LIVE_APIS=true
# These are read by the backend, not frontend directly

# Binance
NEXT_PUBLIC_BINANCE_ENABLED=false

# Kraken  
NEXT_PUBLIC_KRAKEN_ENABLED=false

# FYERS (Indian Stocks)
NEXT_PUBLIC_FYERS_ENABLED=false

# ===================================
# FEATURE FLAGS
# ===================================
NEXT_PUBLIC_ENABLE_PAPER_TRADING=true
NEXT_PUBLIC_ENABLE_BACKTESTING=true
NEXT_PUBLIC_ENABLE_LIVE_TRADING=false
NEXT_PUBLIC_ENABLE_AI_FEATURES=true

# ===================================
# ANALYTICS & MONITORING (OPTIONAL)
# ===================================
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_SENTRY_DSN=

# ===================================
# THEME SETTINGS
# ===================================
NEXT_PUBLIC_DEFAULT_THEME=dark
