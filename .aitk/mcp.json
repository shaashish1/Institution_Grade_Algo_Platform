{
  "servers": {
    "n8n": {
      "type": "http",
      "url": "https://n8n.itgyani.com/mcp/v1",
      "headers": {}
    },
    "figma": {
      "type": "command",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-figma"
      ],
      "env": {
        "FIGMA_PERSONAL_ACCESS_TOKEN": "${FIGMA_PAT}",
        "FIGMA_FILE_KEY": "${FIGMA_FILE_KEY}"
      }
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer ${GITHUB_MCP_TOKEN}"
      }
    },
    "huggingface": {
      "type": "http",
      "url": "https://hf.co/mcp",
      "headers": {
        "Authorization": "Bearer ${HUGGINGFACE_TOKEN}"
      }
    }
  }
}
