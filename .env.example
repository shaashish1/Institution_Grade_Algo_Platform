# AlgoProject Environment Variables
# Copy this file to .env and fill in your actual values

# ===================================
# FYERS API CREDENTIALS (Indian Stocks)
# ===================================
FYERS_APP_ID=your_fyers_app_id_here
FYERS_SECRET_KEY=your_fyers_secret_key_here
FYERS_REDIRECT_URI=http://127.0.0.1:5000/
FYERS_ACCESS_TOKEN=your_access_token_here

# ===================================
# CRYPTO EXCHANGE API KEYS
# ===================================
# Binance
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Kraken
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_SECRET_KEY=your_kraken_secret_key_here

# Coinbase
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_SECRET_KEY=your_coinbase_secret_key_here

# ===================================
# DATABASE CONFIGURATION
# ===================================
DATABASE_URL=sqlite:///./algoproject.db
# For PostgreSQL: postgresql://user:password@localhost:5432/algoproject

# ===================================
# API CONFIGURATION
# ===================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
SECRET_KEY=your_secret_key_for_jwt_here

# ===================================
# FRONTEND CONFIGURATION
# ===================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ===================================
# MONITORING & LOGGING
# ===================================
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=INFO

# ===================================
# REDIS (OPTIONAL - FOR CACHING)
# ===================================
REDIS_URL=redis://localhost:6379/0

# ===================================
# EMAIL NOTIFICATIONS (OPTIONAL)
# ===================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# ===================================
# SECURITY
# ===================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
JWT_EXPIRATION_HOURS=24
MAX_LOGIN_ATTEMPTS=5

# ===================================
# TRADING LIMITS
# ===================================
MAX_POSITION_SIZE=10000
MAX_ORDERS_PER_DAY=100
DEFAULT_RISK_PERCENTAGE=2

# ===================================
# DEVELOPMENT FLAGS
# ===================================
ENABLE_PAPER_TRADING=true
ENABLE_BACKTESTING=true
ENABLE_LIVE_TRADING=false
